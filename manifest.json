{
  "name": "JS Console & Log Notifications",
  "version": "0.2.3",
  "manifest_version": 2,
  "offline_enabled": true,
  "description": "Show JS console (new) and convert console errors/alerts to chrome notifications!",
  "homepage_url": "https://chrome.google.com/webstore/detail/log-notifications/dkebpeehodefnopcpggkdgeljadommmm?utm_source=plus",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "src/bg/background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "icons/icon.png",
    "default_title": "Console Output",
    "default_popup": "src/popup/popup.html"
  },
  "permissions": [
    "notifications","tabs", "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "src/content/content.js"
      ],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    "src/inject/console.js",
    "src/inject/evaluate.js"
  ],
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'"
}